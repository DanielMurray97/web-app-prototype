{% extends "layout.njk" %}
{% from "govuk/components/table/macro.njk" import govukTable %}

{% block section %}

<div style="font-size: 55px; margin-bottom: 20px">Postgres Data Table</div>

<table style="border-collapse: separate; border: solid black 1px; border-spacing: 30px;">
    <thead>
        <tr style="text-align:center; font-weight: bold; font-size: 30px;">
            <td>journal_entry_id</td>
            <td>title</td>
            <td>journal_entry</td>
            <td>full_name</td>
        </tr>
    </thead>
    <tbody>
        {% for element in data %}
        {% if id == element.journal_entry_id %}
        {% set url = ["/data/edit/", element.journal_entry_id, "?_method=PUT"] | join %} {# https://michaelheap.com/nunjucks-concatenate-string/ #}
        <form method="POST" action={{url}}> 
            <tr style="text-align:center; font-size: 25px;">
                <td style="padding: 40px">{{element.journal_entry_id}}
                <td><input value={{element.title}} name="title"></td>
                <td><input value={{element.journal_entry}} name="journal_entry"></td>
                <td><input value={{element.full_name}} name="full_name"></td>
                <td>
                    <button type="submit" style="padding: 10px;">Update</button>
        </form>
        {% set url = ["/data/", element.journal_entry_id, "?_method=DELETE"] | join %} {# https://michaelheap.com/nunjucks-concatenate-string/ #}
              <form method="POST" action={{url}}> 
                <button type="submit" style="padding: 10px;">Delete</button>
              </form>
            </td>
        </tr>
        {% else %}
        <tr style="text-align:center; font-size: 25px;">
            <td style="padding: 40px">{{element.journal_entry_id}}
            <td>{{element.title}}</td>
            <td>{{element.journal_entry}}</td>
            <td>{{element.full_name}}</td>
            <td>
              {% set editUrl = ["/data/", element.journal_entry_id] | join %}
              <a type="submit" href={{editUrl}} style="padding: 10px;">Edit</a>
              
              {% set url = ["/data/", element.journal_entry_id, "?_method=DELETE"] | join %} {# https://michaelheap.com/nunjucks-concatenate-string/ #}
              <form method="POST" action={{url}}> 
                <button type="submit" style="padding: 10px;">Delete</button>
              </form>
            </td>
        </tr>
        {% endif %}
        {% endfor %}
    </tbody>
</table>

{% endblock %}